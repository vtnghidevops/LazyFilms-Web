                <a href="#">Đọc Chính sách quyền riêng tư Lazyfilms</a>
              </p>
              <!--Icon-->
    
              <ul class="footer__icon">
                <li class="footer__bottom-icon"> <a href="#" class="footer__icon-facebook">
                    <i class="fa-brands fa-square-facebook"></i></a>
                </li>
                <li class="footer__bottom-icon"><a href="#" class="footer__icon-instagram">
                    <i class="fa-brands fa-instagram"></i></a>
                </li>
                <li class="footer__bottom-icon"><a href="#" class="footer__icon-youtube">
                    <i class="fa-brands fa-youtube"></i></a>
