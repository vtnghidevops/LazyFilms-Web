            </div>
          </div>
        </div>
  
        <!-- Diễn viên -->
        <div class="container__actor">
          <h2 class="container__actor-heading">Diễn Viên</h2>
          <div class="actor__tabs">
            <ul class="actor__list">
  
              <% for (let i = 0; i < movie.actor_name.length; i++) { %>
                <li class="actor__list-item">
                  <div class="actor__item">
                    <a href="" class="actor__item-link">
                      <div class="actor__item-frames">
                        <img src="<%= movie.path + movie.actor_name[i] + ".jpg"%>" alt="Masakazu Morita">
                      </div>
    
                    </a>
    
                    <div class="actor__item-name">
                      <span class="item__name-season item__name-text"><%= movie.actor_name[i] %></span>
                    </div>
    
                  </div>
                </li>
              <% } %>

            </ul>
            <!-- btn -->
            <div class="carousel__button-prev" type="Nextbutton">
              <i class="fa-light fa-angle-left"></i>
            </div>
  
            <div class="carousel__button-next" type="Prebutton">
              <i class="fa-light fa-angle-right"></i>
            </div>
          </div>
  
        </div>
  
        <!-- Comment -->
        <div class="container__comment">
          <div class="comment">
            <!-- Heading -->
            <div class="comment__heading">
              <div class="comment__heading-title">Bình luận
                <span class="comment__title-count">(<%= Object.keys(movie.comments).length; %>)</span>
              </div>
  
              <div class="commment__heading-filter">
                <button class="comment__filter-select">
                  <span>
                    Nhiều like nhất
                    <i class="fa-solid fa-angle-down"></i>
                  </span>
                </button>
                <ul class="comment__filter-option">
                  <li class="comment__option-item">
                    <a href="#" class="active-option">
                      <img src="/img/done.jpg" alt="done">
                      <span>Nhiều like nhất</span>
                    </a>
                  </li>
                  <li class="comment__option-item">
                    <a href="#">
                      <img src="/img/done.jpg" alt="done">
                      <span>Mới nhất</span>
                    </a>
                  </li>
                  <li class="comment__option-item">
                    <a href="#">
                      <img src="/img/done.jpg" alt="done">
                      <span>Cũ nhất</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
  
            <!-- Yêu cầu đăng nhập để sự dụng cmt -->
            <% if (!loggedIn) { %>
            <div class="required__login active">
              Vui lòng <strong class="text__login">Đăng nhập</strong> vào tài khoản LazyFilms để sử dụng bình luận
            </div>
            <% } %>
  
            <!-- Input comment from users -->
            <% if (loggedIn) { %>
              <div class="comment__input flex">
                <div class="comment__input-avata">
                  <img src="/img/img_user.jpg" alt="user">
                </div>
                  <div class="comment__list-item">
                    <!-- Start of the form -->
                    <textarea name="cmt" id="cmt" wrap="soft" rows="2" placeholder="Viết bình luận..."></textarea>
                    <input type="hidden" id="HiddenId" value="<%= movie._id %>">
                    <input type="hidden" id="Hidden_username" value="<%= user.name %>">
                    <button class="send__cmt" id="submit-comment">
                      <i class="fa-solid fa-paper-plane"></i>
                    </button>
                    <!-- End of the form -->
                  </div>
              </div>
            <% } %>

          

            <!-- List comment -->
            <div class="comment__list">

              <% const reveesed_cmt = movie.comments.reverse() %>
              <% reveesed_cmt.forEach(comment => { %>
                <!-- item cmt-->
                <div class="comment__item">
                  <div class="comment__item-avata">
                    <img src="/img/img_user.jpg" alt="">
                  </div>
                  <!-- main comment -->
                  <div class="comment__item-detail">
                    <div class="comment__detail-area">
                      <div class="detail__area-main">
                        <!-- heading -->
                        <div class="area__main-title">
                          <span class="area__title-name"><%= comment.name %></span>
                          <div class="area__dot"></div>
                        </div>
                        <!-- Detail comment -->
                        <div class="area__main-detail">
                          <span><%= comment.commentText %></span>
                        </div>
                      </div>
    
                      <!-- Like , reply comment -->
                    <div class="comment__item-reply">
                      <div class="item__reply-like">
                        <span>
                          <i class="fa-solid fa-thumbs-up liked"></i>
                          <i class="fa-regular fa-thumbs-up unlike active"></i>
                          <span class="count__like">0</span>
                        </span>
                      </div>
  
                      <div class="item__reply-message">
                        <span>
                          <i class="fa-light fa-message-dots"></i>
                          <span class="count__cmt">0</span>
                        </span>
                      </div>
  
                    </div>
                      <!-- Thêm other ở đây -->
                    </div>
    
                  </div>
    
                  <!-- btn tải thêm bình luận -->
    
                </div>
              <% }) %>

            </div>
  
            <!-- Button Tải thêm cmt -->
            <!-- <div class="comment__moreLoad">Tải thêm bình luận</div> -->
          </div>
        </div>

        
      </div>
      
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="wrap__footer">
          <!--Footer navigation-->
          <nav class="footer__nav">
            <!--  -->
            <ul class="footer__nav-list">
              <li class="footer__nav-item">
                <a href="#">
                  <img src="/img/Logo.jpg" alt="LogoLazyFilms" class="footer__nav-logo">
                </a>
              </li>
    
              <li class="footer__nav-item header__mainPage">
                <a href="/index.html">TRANG CHỦ</a>
    
              </li>
              <li class="footer__nav-item">
                <a href="#">GROUP THẢO LUẬN</a>
              </li>
            </ul>
          </nav>
    
          <!--Footer Infomation -->
    
          <div class="footer__info">
            <div class="footer__info-column">
              <h3 class="footer__info-heading">Giới thiệu về chúng tôi</h3>
              <ul>
                <li class="footer__info-item"><a href="#">Thông tin website</a></li>
              </ul>
            </div>
    
            <div class="footer__info-column">
              <h3 class="footer__info-heading">Hợp tác</h3>
              <ul>
                <li class="footer__info-item"><a href="#">Đăng quảng cáo</a></li>
              </ul>
            </div>
    
            <div class="footer__info-column">
              <h3 class="footer__info-heading">Hỗ trợ lỗi</h3>
              <ul>
                <li class="footer__info-item"><a href="#">Phản ánh ý kiến</a></li>
                <li class="footer__info-item"><a href="#">Hỗ trợ lỗi</a></li>
                <li class="footer__info-item"><a href="#">Câu hỏi thường gặp</a></li>
              </ul>
            </div>
    
            <div class="footer__info-column">
              <h3 class="footer__info-heading">Điều khoản dịch vụ</h3>
              <ul>
                <li class="footer__info-item"><a href="#">Điều khoản riêng tư</a></li>
                <li class="footer__info-item"><a href="#">Điều khoản sử dụng</a></li>
              </ul>
    
            </div>
          </div>
    
    
          <!--Footer bottom-->
          <div class="footer__bottom">
            <div class="footer__bottom-center">
