<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LazyFilms: Xem Phim Không Giới Hạn</title>

    <link rel="stylesheet" href="/fonts/fontawesome.com/releases/v6.5.1/css/all.css" />
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" /> -->
    <link rel="stylesheet" href="/fonts/Alata/Alata-Regular.ttf">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/img/SubLogo.jpg" type="image/x-icon" />

    <script src="/script/admin.js" defer> </script>

</head>

<body>

    <div class="wrap_admin">
        <!--Header-->
        <div class="slidebar">
            <header>
                <div class="header_logo">
                    <a class="image">
                        <img src="/img/Logo.jpg" alt="LogoLazyFilms">
                    </a>
                </div>
            </header>
            <div class="menu-bar">
                <div class="slidebar_menu">
                    <ul class="slidebar_menu-list" id="admin_sidebar">
                        <li class="slidebar_menu-items">
                            <a href="/Admin/Home">
                                Dashboard
                            </a>
                        </li>
                        <li class="slidebar_menu-items" id="current">
                            <a href="/Admin/Users">
                                Users
                            </a>
                        </li>
                        <li class="slidebar_menu-items">
                            <a href="/Admin/Films">
                                Phim
                            </a>
                        </li>
                        <li class="slidebar_menu-items">
                            <a href="/Admin/Report">
                                Báo Lỗi
                            </a>
                        </li>
                        <li class="slidebar_menu-items">
                            <a href="#">
                                Quảng cáo
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="admin_carousel">
            <div class="admin_carousel-webName">
                <h1>LAZYFILMS.COM</h1>
            </div>
            <div class="user__heading">
                <div class="user__heading-header">
                    <h2>USERS</h2>
                    <h3 class="Number_of_Users">(1)</h3>
                </div>
                <div>
                    <ul class="user__heading-nav">
                        <li class="user__heading-nav-item"><a href="#">All</a></li>
                        <li class="user__heading-nav-itemUsers"><a href="#">Users</a></li>
                        <li class="user__heading-nav-item"><a href="#">Administrators</a></li>

                </div>
                <div class="user__content">
                    <form class="user__choose-all">
                        <!-- <input type="checkbox" />
                        <label> Chọn tất cả</label> -->
                    </form>
                    <table class="user__infor" width="87%">
                       <thead>
                            <tr>
                                <th width="4%"></th>
                                <th width="25%">UserName</th>
                                <th width="20%">Name</th>
                                <th width="20%">Email</th>
                                <th width="10%">Role</th>
                                <th width="21%">Change role / Delete</th>
                            </tr>

                            <% user.forEach(user => { %>
                            <tr>
                                <td></td>
                                <td><%= user.username  %></td>
                                <td><%= user.name  %></td>
                                <td><%= user.email  %></td>
                                <td><%= user.role  %></td>
                                <td>
                                    <div class="user-authorization">
                                        <form class="admin-userForm" action="/update" method="post">
                                            <input type="hidden" name="update_data" action="/update" value="ADMIN">
                                            <input type="hidden" name="userID" value=<%= user._id %>>
                                            <button type="submit" class="btn_vipUser">Admin</button>
                                        </form>
                                        <form class="vip-userForm" action="/update" method="post">
                                            <input type="hidden" name="update_data" action="/update" value="VIP">
                                            <input type="hidden" name="userID" value=<%= user._id %>>
                                            <button type="submit" class="btn_vipUser">Vip</button>
                                        </form>
                                        <form class="delete-userForm" action="/update" method="post">
                                            <input type="hidden" name="update_data" value="DELETE">
                                            <input type="hidden" name="userID" value=<%= user._id %>>
                                            <button type="submit" class="btn_deleteUser">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>

                       </thead>
                    </table>
        
                </div>
</body>

</html>